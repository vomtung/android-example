<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vmtung.example.CanvasAndPaint2Activity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.example.vmtung.example.CircleView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                >

            </com.example.vmtung.example.CircleView>
            <com.example.vmtung.example.ClockView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/clockViewId"
                >

            </com.example.vmtung.example.ClockView>

            <com.example.vmtung.example.BitMapClockView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/bitMapClockView"
                >

            </com.example.vmtung.example.BitMapClockView>

            <com.example.vmtung.example.RoundChart
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/exampleRoundChart"
                >

            </com.example.vmtung.example.RoundChart>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
